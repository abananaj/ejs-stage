<section class="intro">
    <p>Welcome to the EJS demonstration.</p>
    <p>This is a simple project that shows how to use EJS without Express or any other web framework.</p>
</section>

<section class="items">
    <h2>Items</h2>
    <ul>
        <% items.forEach(function(item) { %>
            <li><strong>
                    <%= item.name %>
                </strong> - <%= item.description %>
            </li>
            <% }); %>
    </ul>
</section>

<section class="info">
    <h2>About This Setup</h2>
    <p>Generated at: <%= new Date().toLocaleString() %>
    </p>
    <% if (isDevelopment) { %>
        <p style="color: red;">Running in development mode</p>
        <% } %>
</section>